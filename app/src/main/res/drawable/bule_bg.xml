<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 设置圆角矩形 -->
    <corners android:radius="2dp" />
    <!-- 边距 -->
    <padding
        android:top="2dp"
        android:bottom="2dp"
        android:left="6dp"
        android:right="6dp"/>
    <!--  设置背景色-->

    <!-- 边框 -->
    <stroke
        android:width="1dp"
        android:color="@color/white"/>
</shape>